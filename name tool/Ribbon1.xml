<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
  <ribbon>
    <tabs>
      <tab id="tabShapeManager" label="Gemini Tools">
        <group id="groupShapeManager" label="Shape Management">
          <button id="btnOpenShapeManager" label="Shape Manager" 
                  size="large" 
                  getImage="GetImage" 
                  onAction="OnOpenManagerClick"
                  description="Open the advanced shape management tool to isolate and reorder objects."/>
        </group>
        <group id="groupImageTools" label="Image Tools">
          <button id="btnQuickSelect" label="Quick Select" 
                  size="large" 
                  imageMso="ObjectsSelect" 
                  onAction="OnQuickSelectClick"
                  description="Select any area of an image using Adobe Photoshop Quick Selection, then import it as an independent shape for animation."/>
        </group>
      </tab>
    </tabs>
  </ribbon>
</customUI>
